    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${workspaceFolder}/FriendsOfClasses/main.cpp",
                "${workspaceFolder}/FriendsOfClasses/Budget.cpp",
                "${workspaceFolder}/FriendsOfClasses/Auxil.cpp",
                "-o",
                "FriendsOfClasses/main"
            ],
            "problemMatcher": []
        },
        {
            "label": "run",
            "type": "shell",
            "command": "${workspaceFolder}/FriendsOfClasses/main",
            "dependsOn":[
                "build"
            ],
             "problemMatcher": []
        }
    ]
}